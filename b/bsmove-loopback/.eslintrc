{
  "env": {
      "es6": true,
      "node": true
  },
  "plugins": [
      "security"
  ],
  "extends": [
      "eslint:recommended",
      "loopback",
      "plugin:security/recommended"
  ],
  "rules": {
      "indent": [
          "error",
          2
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ],
      "max-len": [
          "error",
          100
      ]
  },
  "parserOptions": {
      "ecmaVersion": 2017
  }
}
