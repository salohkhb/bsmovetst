{
  "name": "Order",
  "plural": "Orders",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "total": {
      "type": "string",
      "default": "0"
    },
    "uniqueId": {
      "type": "string"
    },
    "createdAt": {
      "type": "date",
      "defaultFn": "now"
    },
    "items": {
      "type": ["object"],
      "required": true
    },
    "status": {
      "type": "string",
      "default": "UNPAID"
    },
    "finished": {
      "type": "boolean",
      "default": "false"
    },
    "paymentIntent": {
      "type": "object"
    },
    "paymentIntentId": {
      "type": "string"
    },
    "paymentMethodId": {
      "type": "string",
      "required": true
    },
    "deliveryAddress": {
      "type": "object",
      "required": true
    },
    "facturationAddress": {
      "type": "object",
      "required": true
    },
    "savePaymentMethod": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "customer": {
      "type": "belongsTo",
      "model": "Customer",
      "foreignKey": ""
    },
    "product": {
      "type": "referencesMany",
      "model": "Product",
      "foreignKey": "productIds",
      "required": true,
      "options": {
        "persistent": true,
        "validate": false,
        "forceId": false
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__get__products"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "webhook"
    }
  ],
  "methods": {}
}
